package de.test;

import static org.junit.Assert.*;
import java.io.IOException;

import org.apache.hadoop.conf.Configuration;
import org.apache.hadoop.hbase.HBaseConfiguration;
import org.apache.hadoop.hbase.client.HTable;
import org.apache.hadoop.hbase.client.Result;
import org.apache.hadoop.hbase.client.ResultScanner;
import org.apache.hadoop.hbase.client.Scan;
import org.apache.hadoop.hbase.util.Bytes;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

public class HelloCoprocessorTest {
	HTable testTable;

	@Before
	public void setUp() throws Exception {
		Configuration config = HBaseConfiguration.create();
        config.set("hbase.zookeeper.quorum", "HB");

        testTable = new HTable(config, "test");
        
        for (int i = 0; i < 100; i++) {
            byte[] family = Bytes.toBytes("cf");
            byte[] qual = Bytes.toBytes("a");

            Scan scan = new Scan();
            scan.addColumn(family, qual);
            ResultScanner rs = testTable.getScanner(scan);
            for (Result r = rs.next(); r != null; r = rs.next()) {
                byte[] valueObj = r.getValue(family, qual);
                String value = new String(valueObj);
                System.out.println(value);
            }
        }
        
        
	}

	@After
	public void tearDown() throws Exception {
		testTable.close();
	}

	@Test
	public void test() {
		
	}

}
